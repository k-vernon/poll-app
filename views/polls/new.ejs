<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/polls/new.css">
<%- include('../partials/nav') %>

<main>
 
  <div class="poll-form">
    <!-- ADD POLL FORM -->
    <form id="poll-form" action="/polls" method="POST">
      <div class="header-text">
        <h1><%= title %></h1>
        <div class="sub-header">Please provide your poll information and submit!</div>
      </div>
      <!-- QUESTION FIELD -->
      <label form="poll-form">
        <span>Question:<span id="required">*</span></span>
        <input required class="question-field" type="text" name="question"/>
      </label>
      

      <!-- SELECT TOPIC FIELD -->
      <label><span>Topic:</span>
        <select name="topic" class="topic-select">
          <option selected value="General">General</option>
          <option value="Relationships">Relationships</option>
          <option value="Funny">Funny</option>
          <option value="Would You Rather">Would You Rather</option>
          
        </select>
      </label>
      
      <!-- DESCRIPTION FIELD -->
      <label>
        <span>Description:</span>
        <textarea name="description" class="description-textarea" placeholder="(Optional)"></textarea>
      </label>

      <!-- CHOICES FIELD -->
      <label>
        <span class="choices-text"> Choices:<span id="required">*</span> 
        </span>
        <div class="choices-container">
          <input required type="text" name="choices.choiceOne" class="choices-field" placeholder="Choice 1"/>
          <input required type="text" name="choices.choiceTwo" class="choices-field" placeholder="Choice 2"/>
        </div>
      </label>
      

      <!-- ADD POLL BUTTON -->
       <button class="add-poll-btn" type="submit">Add Poll</button>
    </div>
  </form>
</main>

<%- include('../partials/footer') %>