<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/polls/new.css">
<%- include('../partials/nav') %>

<main>
  <div></div>
  <h1><%= title %></h1>
  <form id="new form" action="/polls" method="POST">

    <label for="question-input">
      Question:
    </label>
    <input required type ="text" name="question" id="question-input" maxlength="50">
    
    <label for="description-text-area">
      Description:
    </label>
    <textarea type="text" name="description" id="description-text-area" 
    rows="5" cols="60">
    </textarea>

    <label for="choices-input">
      Choices:
    </label>
    <ul name="choices" id="choices-input">
      
    </ul>
    
    <form>
    <label for="add-choice-input">
      Add Choice:
    </label>
    <input type ="text" name="add-choice" id="add-choice-input">
    <button>Add</button>
    </form>

    <button type="submit">Add Poll</button>
  </form>
</main>

<%- include('../partials/footer') %>